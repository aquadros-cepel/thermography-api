{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "maven: spring-boot:run",
      "type": "shell",
      "command": "./mvnw spring-boot:run -Dspring-boot.run.jvmArguments=\"-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005\"",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Tomcat started.*$",
          "endsPattern": "^.*Started ThermographyApiApp.*$"
        }
      }
    },
    {
      "label": "maven: clean install",
      "type": "shell",
      "command": "./mvnw clean install",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "maven: test",
      "type": "shell",
      "command": "./mvnw test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "npm: start",
      "type": "shell",
      "command": "./npmw start",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack",
          "endsPattern": "Compiled successfully"
        }
      }
    },
    {
      "label": "Start Backend and Frontend",
      "dependsOn": ["maven: spring-boot:run", "npm: start"],
      "problemMatcher": []
    }
  ]
}
